{
  "_comment": {
    "overview": "DAWLabs Monorepo Root Package Configuration",
    "description": "This is the root package.json for the DAWLabs monorepo that orchestrates all development workflows, manages shared dependencies, and defines standard scripts for building, testing, and publishing packages across the entire repository.",
    "architecture": "Uses Turborepo for task orchestration and caching, pnpm for package management, and supports both TypeScript and JavaScript packages with comprehensive tooling."
  },
  "name": "dawlabs-monorepo",
  "version": "0.1.0",
  "description": "DAWLabs monorepo for all tools, libraries, scripts, and CLI commands",
  "private": true,
  "type": "module",
  "scripts": {
    "_comment": "Development and Build Scripts - Orchestrated through Turborepo for efficient task execution and caching",
    "build": "turbo run build",
    "build:nest": "turbo run build:nest",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "start:dev": "turbo run start:dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "create-package": "node tools/create-dawlabs-package/index.js",
    "cli": "node tools/internal-cli/index.js",
    "changeset": "changeset",
    "version-packages": "pnpm changeset version",
    "release": "turbo run build && turbo run build:nest && changeset publish",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:all": "rm -rf node_modules .turbo && find . -name node_modules -type d -exec rm -rf {} +",
    "postinstall": "husky install || true",
    "prepare": "husky"
  },
  "keywords": [
    "monorepo",
    "dawlabs",
    "sikancil",
    "tools",
    "cli",
    "utilities",
    "typescript"
  ],
  "author": {
    "name": "Arif Widianto",
    "email": "dimas.arif.widianto@gmail.com",
    "url": "https://github.com/sikancil"
  },
  "homepage": "https://github.com/sikancil/dawlabs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sikancil/dawlabs.git"
  },
  "bugs": {
    "url": "https://github.com/sikancil/dawlabs/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.39.1",
    "@types/commander": "^2.12.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "commander": "^14.0.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
