{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "DAWLabs NestJS App TypeScript",
  "extends": "../../config/tsconfig.nestjs.json",
  "compilerOptions": {
    // TypeScript Specific Overrides
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "test/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
