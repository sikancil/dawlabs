{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "DAWLabs NestJS Plugin TypeScript",
  "extends": "../../config/tsconfig.nestjs.json",
  "compilerOptions": {
    // TypeScript Specific Overrides
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
