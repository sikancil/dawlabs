{
  "name": "{{packageName}}",
  "version": "0.0.1",
  "description": "{{description}}",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "{{name}}": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "dawlabs",
    "cli",
    "{{type}}"
  ],
  "author": "{{author}}",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@dawlabs/tsconfig": "workspace:*",
    "@types/node": "workspace:*",
    "eslint": "workspace:*",
    "jest": "workspace:*",
    "tsup": "workspace:*",
    "typescript": "workspace:*"
  }
}
