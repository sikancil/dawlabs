{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "DAWLabs TypeScript Library",
  "extends": "../../config/tsconfig.base.json",
  "compilerOptions": {
    // TypeScript Specific Overrides
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
